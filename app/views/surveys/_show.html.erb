<div class="wrapper">
<header>
<h1>
  <%= @survey.title %>
</h1>
<h2>
  <%= @survey.description %>
</h2>
</header>

<div class="copylink">Copy and paste this link:
  https://surveygoat.herokuapp.com<%= new_submission_path(survey_id: @survey.id) %>
</div>

</p>

<% if @survey.complete? %>
  <p>Copy and paste this link: https://surveygoat.herokuapp.com
    <%= new_submission_path(survey_id: @survey.id) %>
  </p>
<% else %>
  <h3><%= "Surveys must include at least one question." %></h3>
<% end %>

<div class="showQuestionDiv">
<% @survey.questions.each do |q| %>
  <h3>Question: <%= q.question_text %></h3>
  <p>Description: <%= q.description %></p>
  <% q.responses.each do |r| %>
    <p><%= r.response_text %></p>

  <% end  %><br>

<% end  %><br>
</div>

<%= link_to 'Submission Form', new_submission_path(survey_id: @survey.id) %>
<%= link_to 'Edit', edit_survey_path(@survey), remote: true %> |
<%= link_to 'Back', surveys_path %>
</div>
