

<div id="layout" class="content pure-g">
    <div id="nav" class="pure-u">
        <a href="#" class="nav-menu-button">Menu</a>

        <div class="nav-inner">
            <button class="primary-button pure-button"><%= link_to 'New Survey', new_survey_path %></button>
            <div class="pure-menu pure-menu-open"></div>
        </div>
    </div>



<div id="list" class="pure-u-1">
  <div class="survey-item pure-g">
      <div class="pure-u"><% @surveys.each do |survey| %>
        <div class="pure-u-3-4">
            <h5 class="survey-name"><%= survey.title %></h5>
            <h4 class="survey-subject"></h4>
            <p class="survey-desc"><%= survey.description %></p>
            <%= link_to 'Show', survey %>
        </div>
        <% end %>
      </div>
  </div>
</div>



<div id="main" class="pure-u-1">
